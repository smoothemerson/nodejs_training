generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  SMALL
  AVERAGE
  BIG
}

enum EnergyLevel {
  LOW
  AVERAGE
  HIGH
}

enum IndependenceLevel {
  LOW
  AVERAGE
  HIGH
}

enum Environment {
  OPEN
  CLOSED
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  cep           String
  address       String
  phone         String
  password_hash String
  created_at    DateTime @default(now())

  Pet Pet[]

  @@map("organization")
}

model Pet {
  id           String            @id @default(uuid())
  state        String
  city         String
  neighborhood String
  road         String
  number       String
  name         String
  description  String
  age          Int
  size         Size
  energy_level EnergyLevel
  independence IndependenceLevel
  environment  Environment
  created_at   DateTime          @default(now())

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  @@map("pets")
}
